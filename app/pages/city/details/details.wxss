.cdNav {
  position:fixed;
  z-index:99;
  width: 100%;
  border-bottom: 2rpx solid #777;
  text-align: center;
  line-height: 80rpx;
  background:#fff;
}
.cdNav-list {
  font-size: 30rpx;
  display: inline-block;
  width: 20%;
  color: #777;
}
.cdNav-list.active {
  color: #da7c0c;
  border-bottom: 5rpx solid #da7c0c;
}
.cdtabBox{
  padding:90rpx 0 0 0;
}
.cdContent{
  padding:20rpx;
}
.cd_list {
  position: relative;
  width: 100%;
  margin-bottom: 5px;
}
.cd_list .cdBg {
  width: 100%;
  height: 380rpx;
}
.cd_list .cdInfo {
  position: absolute;
  width: 600rpx;
  left: 50%;
  top: 30%;
  margin-left: -300rpx;
  text-align: center;
}
.cd_list .cdInfo text {
  display: block;
  color: #fff;
}
.cdInfo .cdName {
  font-size: 82rpx;
  font-weight: bold;
}
.cdInfo .cdPeople {
  margin-top: 5px;
  font-size: 16px;
}
.cdInfo-tag{
  position:absolute;
  width:100%;
  font-size:16px;
  color:#fff;
  bottom:0;
  left:0;
  background:rgba(0,0,0,0.6);
  padding:30rpx 0 15rpx 0;
}
.cdInfo-tag text{
  display:block;
  margin-bottom:15rpx;
  margin-left:20rpx;
}





