/* pages/index/index.wxss */
.homeHead{
  position:relative;
  height:530rpx;
}
.homeHead .title{
  position:absolute;
  top:50%;
  left:50%;
  z-index:999;
  width:600rpx;
  height:100px;
  margin:-130rpx 0 0 -300rpx;
  text-align:center;
}
.homeHead .title text{
  display:block;
}
.title .slogan{
  color:#fff;
  font-weight:bold;
  font-size:27px;
  line-height:36px;
}
.title .playVideo{
  width:160rpx;
  padding:6px 4px;
  margin:15px auto 0 auto;
  background:#1a9ffd;
  font-size:14px;
  color:#fff;
  border-radius:4px;
}
.bgPhoto{
   height:530rpx;
}
.bgPhoto swiper-item image{
  width:100%;
  height:100%;
}
.homeBody{
  padding:10px 15px;
}
.mod_itemBox{
  margin-top:15px;
}
.mod_itemBox .itemHead{
  height:60rpx;
  line-height:60rpx;  
}
.mod_itemBox .itemHead .title{
  font-size:18px;
  font-weight:bold;
}
.mod_itemBox .itemHead .more{
  float:right;
  font-size:12px;
}
.mod_itemBox .itemContainer{
  padding:7px 0;
}
.cityList{
  display:flex;
  flex-direction: row;
  flex-wrap:wrap;
  justify-content:space-between;
}
.cityList .cityItem{
  width:102rpx;
  padding:8px 10px;
  font-size:14px;
  text-align:center;
  border:1px solid #ddd;
  margin:4px 0;
}
.indexItem{
  display:flex;
  flex-direction: row;
  flex-wrap:wrap;
  justify-content:space-between;
}
.mod_prList image{
  width:100px;
  height:100px;
}
.mod_prList text{
  display: block;
  font-size:14px;
  text-align:center;
  padding:8px 0;
}
.minapp_footer{
  font-size:14px;
  text-align:center;
  padding:15px 0px;
}
.minapp_footer text{
  display:block;
  color:#1a9ffd;
  margin-bottom:7px;
}